include "test.idp"

cout << "mpiGatherv" << endl;

real t;

cout << IND << "int[int]" << endl;

int[int] snd(mpisize), rcv(mpisize * mpisize), a(mpisize), b(mpisize);

snd[mpirank] = mpirank;

for (int i = 0; i < mpisize; i++) {
	a[i] = mpisize;
	b[i] = i * mpisize;
}

t = mpiWtime();
mpiGatherv(snd, rcv, processor(0), a, b);
t = mpiWtime() - t;
cout << IND << IND << t << endl;
if (mpirank == 0) {
	int i = 0;
	for (int counter = 0; counter < mpisize; counter++) {
		test(rcv[i] == counter);
		i += (mpisize + 1);
	}
}


