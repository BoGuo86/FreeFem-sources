include "test.idp"

cout << functionDEFINITION << "mpiAllGather" << endl;
real t;

cout << typeDEFINITION << "int[int]" << endl;

int rank = mpirank;
int[int] nbRcv(mpisize);
t = mpiWtime();
mpiAllgather(rank, nbRcv, mpiCommWorld);
t = mpiWtime() - t;
cout << timeELAPSED << t << endl;
test(nbRcv[mpirank] == mpirank);

