include "test.idp"

cout << "mpiAllGatherv" << endl;

real t;

cout << IND << "int[int]" << endl;

int[int] a(mpisize), b(mpisize * mpisize), c(mpisize), e(mpisize);
a[mpirank] = mpirank + 1;

for (int i = 0; i < mpisize; i++) {
	c[i] = mpisize;
	e[i] = i * mpisize;
}

t = mpiWtime();
mpiAllgatherv(a, b, c, e);
mpiBarrier(mpiCommWorld);
t = mpiWtime() - t;
cout << IND << IND << t << endl;
int i = 0;
for (int counter = 0; counter < mpisize; counter++) {
	test(b[i] == counter + 1);
	i += (mpisize + 1);
}

t = mpiWtime();
mpiAllgatherv(a, b, mpiCommWorld, c, e);
mpiBarrier(mpiCommWorld);
t = mpiWtime() - t;
cout << IND << IND << t << endl;
i = 0;
for (int counter = 0; counter < mpisize; counter++) {
	test(b[i] == counter + 1);
	i += (mpisize + 1);
}


